---
export interface Props {
  title: string;
  price: number;
  href: string;
}

const {href, title, price} = Astro.props;

---


<a href="#" class="group">
  <div class="min-h-80 aspect-w-1 aspect-h-1 w-full overflow-hidden rounded-md bg-gray-200 group-hover:opacity-75 lg:aspect-none lg:h-80">
    <img src={href} alt="Hand holding black machined steel mechanical pencil with brass tip and top."
      class="h-full w-full object-center object-cover group-hover:opacity-75"
    >
  </div>

  <h3 class="mt-4 text-sm text-gray-700">{title}</h3>
  <p class="mt-1 text-lg font-md text-gray-900">${price.toString()}</p>
</a>
